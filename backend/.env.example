# Database Configuration
DATABASE_URL=sqlite:///database.db

# Upload Directory (defaults to ./uploads if not set)
UPLOAD_DIR=./uploads

# Base URL for local file serving
BASE_URL=http://localhost:8000

# RocketAPI Configuration (required)
ROCKET_API_KEY=your_rocket_api_key_here

# JWT Authentication Configuration
# SESSION_SECRET: Secret key for JWT token signing (REQUIRED in production)
# Generate a secure secret with: openssl rand -hex 32
# NEVER deploy to production without setting this to a strong random value!
SESSION_SECRET=your_session_secret_key_here
# ENV: Environment mode (development, production)
ENV=development
# ACCESS_TOKEN_EXPIRE_MINUTES: JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting Configuration (requests per minute)
# RATE_LIMIT_DEFAULT: Default rate limit for all endpoints
RATE_LIMIT_DEFAULT=200/minute
# RATE_LIMIT_FEED: Rate limit for public feed endpoints
RATE_LIMIT_FEED=60/minute
# RATE_LIMIT_INTERACTIONS: Rate limit for interaction logging
RATE_LIMIT_INTERACTIONS=120/minute
# RATE_LIMIT_HEARTBEAT: Rate limit for heartbeat endpoint (5 per second)
RATE_LIMIT_HEARTBEAT=300/minute

# Ollama Cloud Configuration (for AI comment generation)
# OLLAMA_API_TOKEN: API token for Ollama Cloud (required for AI features)
# Get your token from https://ollama.ai
OLLAMA_API_TOKEN=your_ollama_api_token_here
# OLLAMA_MODEL: Model to use for comment generation (default: llama3.2)
OLLAMA_MODEL=llama3.2
